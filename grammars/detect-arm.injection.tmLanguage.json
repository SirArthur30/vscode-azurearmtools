{
    "version": "https://github.com/Microsoft/vscode-JSON.tmLanguage/commit/9bd83f1c252b375e957203f21793316203f61f70",
    "name": "JSON (Javascript Next)",
    "$comment0": "==================================================================================================",
    "$comment1": "This is the same as the JSON grammar except that it switches to source.json.arm if it detects a",
    "$comment2": "valid ARM deployment schema",
    "$commentZ": "==================================================================================================",
    "scopeName": "detect-arm.injection.{{extension}}",
    "injectionSelector": "R:meta.structure.dictionary.{{extension}}",
    "patterns": [
        {
            "$comment": "========================== START OF MODIFICATION: ADDED ==========================",
            "$comment2": "Inside of a dictionary, if the key+value are a valid ARM deployment schema, then switch to the ARM grammar for property values for the rest of the file",
            "$comment3": "",
            "name": "meta.arm-deployment-template",
            "begin": "\\s*\"\\$schema\":\\s*\"https?:\\/\\/schema.management.azure.com\\/schemas\\/[^\"\\/]+\\/(deploymentTemplate|subscriptionDeploymentTemplate)\\.json#?\"\\s*,",
            "beginCaptures": {
                "0": {
                    "name": "keyword.other.meta.azure-schema.arm-deployment"
                }
            },
            "end": "$no-end-we-want-scope-to-continue-to-end-of-file",
            "patterns": [
                {
                    "comment": "the JSON object key",
                    "include": "#objectkey"
                },
                {
                    "include": "#comments"
                },
                {
                    "begin": ":",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.separator.dictionary.key-value.{{extension}}"
                        }
                    },
                    "end": "(,)|(?=\\})",
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.separator.dictionary.pair.{{extension}}"
                        }
                    },
                    "name": "meta.structure.dictionary.value.{{extension}}",
                    "patterns": [
                        {
                            "$comment1": "Whenever we hit a dictionary value after finding a template schema, look",
                            "$comment2": "for values that can include template language expressions inside strings",
                            "include": "source.json.arm"
                        }
                    ]
                }
            ],
            "$commentEnd": "========================== END OF MODIFICATION =========================="
        },
        {
            "match": "abc",
            "name": "abc"
        }
    ],
    "asdf": "pare down",
    "repository": {
        "array": {
            "begin": "\\[",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.array.begin.{{extension}}"
                }
            },
            "end": "\\]",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.array.end.{{extension}}"
                }
            },
            "name": "meta.structure.array.{{extension}}",
            "patterns": [
                {
                    "include": "#value"
                },
                {
                    "match": ",",
                    "name": "punctuation.separator.array.{{extension}}"
                },
                {
                    "match": "[^\\s\\]]",
                    "name": "invalid.illegal.expected-array-separator.{{extension}}"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "begin": "/\\*\\*(?!/)",
                    "captures": {
                        "0": {
                            "name": "punctuation.definition.comment.{{extension}}"
                        }
                    },
                    "end": "\\*/",
                    "name": "comment.block.documentation.{{extension}}"
                },
                {
                    "begin": "/\\*",
                    "captures": {
                        "0": {
                            "name": "punctuation.definition.comment.{{extension}}"
                        }
                    },
                    "end": "\\*/",
                    "name": "comment.block.{{extension}}"
                },
                {
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.comment.{{extension}}"
                        }
                    },
                    "match": "(//).*$\\n?",
                    "name": "comment.line.double-slash.js"
                }
            ]
        },
        "constant": {
            "match": "\\b(?:true|false|null)\\b",
            "name": "constant.language.{{extension}}"
        },
        "number": {
            "match": "(?x)        # turn on extended mode\n  -?        # an optional minus\n  (?:\n    0       # a zero\n    |       # ...or...\n    [1-9]   # a 1-9 character\n    \\d*     # followed by zero or more digits\n  )\n  (?:\n    (?:\n      \\.    # a period\n      \\d+   # followed by one or more digits\n    )?\n    (?:\n      [eE]  # an e character\n      [+-]? # followed by an option +/-\n      \\d+   # followed by one or more digits\n    )?      # make exponent optional\n  )?        # make decimal portion optional",
            "name": "constant.numeric.{{extension}}"
        },
        "object": {
            "begin": "\\{",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.dictionary.begin.{{extension}}"
                }
            },
            "end": "\\}",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.dictionary.end.{{extension}}"
                }
            },
            "name": "meta.structure.dictionary.{{extension}}",
            "patterns": [
                {
                    "comment": "the JSON object key",
                    "include": "#objectkey"
                },
                {
                    "include": "#comments"
                },
                {
                    "begin": ":",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.separator.dictionary.key-value.{{extension}}"
                        }
                    },
                    "end": "(,)|(?=\\})",
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.separator.dictionary.pair.{{extension}}"
                        }
                    },
                    "name": "meta.structure.dictionary.value.{{extension}}",
                    "patterns": [
                        {
                            "comment": "the JSON object value",
                            "include": "#value"
                        },
                        {
                            "match": "[^\\s,]",
                            "name": "invalid.illegal.expected-dictionary-separator.{{extension}}"
                        }
                    ]
                },
                {
                    "match": "[^\\s\\}]",
                    "name": "invalid.illegal.expected-dictionary-separator.{{extension}}"
                }
            ]
        },
        "string": {
            "begin": "\"",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.{{extension}}"
                }
            },
            "end": "\"",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.{{extension}}"
                }
            },
            "name": "string.quoted.double.{{extension}}",
            "patterns": [
                {
                    "include": "#stringcontent"
                }
            ]
        },
        "objectkey": {
            "begin": "\"",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.support.type.property-name.begin.{{extension}}"
                }
            },
            "end": "\"",
            "endCaptures": {
                "0": {
                    "name": "punctuation.support.type.property-name.end.{{extension}}"
                }
            },
            "name": "string.{{extension}} support.type.property-name.{{extension}}",
            "patterns": [
                {
                    "include": "#stringcontent"
                }
            ]
        },
        "stringcontent": {
            "patterns": [
                {
                    "match": "(?x)                # turn on extended mode\n  \\\\                # a literal backslash\n  (?:               # ...followed by...\n    [\"\\\\/bfnrt]     # one of these characters\n    |               # ...or...\n    u               # a u\n    [0-9a-fA-F]{4}) # and four hex digits",
                    "name": "constant.character.escape.{{extension}}"
                },
                {
                    "match": "\\\\.",
                    "name": "invalid.illegal.unrecognized-string-escape.{{extension}}"
                }
            ]
        },
        "value": {
            "patterns": [
                {
                    "include": "#constant"
                },
                {
                    "include": "#number"
                },
                {
                    "include": "#string"
                },
                {
                    "include": "#array"
                },
                {
                    "include": "#object"
                },
                {
                    "include": "#comments"
                }
            ]
        }
    }
}
