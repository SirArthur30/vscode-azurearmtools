{
    "extends": "tslint-microsoft-contrib",
    "rules": {
        "await-promise": [
            true,
            "Thenable"
        ],
        "binary-expression-operand-order": false, //TODO
        "completed-docs": false,
        "function-name": [
            true,
            {
                "static-method-regex": "^[a-z][\\w_]+$"
            }
        ],
        "import-name": false,
        "interface-name": false, //TODO
        "linebreak-style": false,
        "max-line-length": [
            false,
            140
        ],
        "member-ordering": false,
        "missing-jsdoc": false,
        "newline-before-return": false,
        "no-backbone-get-set-outside-model": false,
        "no-implicit-dependencies": [
            false, // TODO
            [
                "vscode"
            ]
        ],
        "no-increment-decrement": false,
        "no-multiline-string": false,
        "no-object-literal-type-assertion": false,
        "no-parameter-properties": false,
        "no-parameter-reassignment": false,
        "no-relative-imports": false,
        "no-return-await": false,
        "no-single-line-block-comment": false,
        "no-this-assignment": false, //TODO
        "no-unexternalized-strings": [
            false,
            {
                "signatures": [
                    "localize",
                    "nls.localize"
                ],
                "keyIndex": 0,
                "messageIndex": 1
            }
        ],
        "no-unnecessary-local-variable": false, // TODO
        "no-use-before-declare": false,
        "no-void-expression": [
            true,
            "ignore-arrow-function-shorthand"
        ],
        "one-variable-per-declaration": false, // todo
        "prefer-const": false,
        "prefer-object-spread": false,
        "prefer-type-cast": false,
        "quotemark": [
            false,
            "single"
        ],
        "radix": false,
        "strict-boolean-expressions": [
            false, // TODO: true
            "allow-string",
            "allow-undefined-union",
            "allow-mix",
            "allow-null-union"
        ],
        "switch-final-break": false,
        "trailing-comma": false,
        "typedef": [
            true,
            "call-signature",
            //TODO: "arrow-call-signature",
            "parameter",
            // "arrow-parameter",
            "property-declaration",
            // TODO: "variable-declaration",
            "member-variable-declaration"
        ],
        "variable-name": [
            false, // TODO
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ]
    }
}
